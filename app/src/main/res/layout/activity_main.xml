<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="32sp"
                android:id="@+id/team_a_text"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"
                android:layout_below="@id/team_a_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team_a_score"
                android:layout_below="@id/image_a"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textSize="64sp"
                android:text="0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_a_score"
                android:layout_centerHorizontal="true"
                android:id="@+id/a_3points"
                android:text="3 points"
                android:textSize="24sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/a_3points"
                android:layout_centerHorizontal="true"
                android:id="@+id/a_2points"
                android:text="2 points"
                android:textSize="24sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/a_2points"
                android:layout_centerHorizontal="true"
                android:id="@+id/a_free"
                android:text="1 point"
                android:textSize="24sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="32sp"
                android:id="@+id/team_b_text"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher_round"
                android:layout_below="@id/team_b_text"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_b"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/team_b_score"
                android:layout_below="@id/image_b"
                android:layout_centerHorizontal="true"
                android:padding="8dp"
                android:textSize="64sp"
                android:text="0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_b_score"
                android:layout_centerHorizontal="true"
                android:id="@+id/b_3points"
                android:text="3 points"
                android:textSize="24sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b_3points"
                android:layout_centerHorizontal="true"
                android:id="@+id/b_2points"
                android:text="2 points"
                android:textSize="24sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/b_2points"
                android:layout_centerHorizontal="true"
                android:id="@+id/b_free"
                android:text="1 point"
                android:textSize="24sp"/>


        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>



</LinearLayout>
